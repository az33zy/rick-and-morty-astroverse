{
	"semi": false,
	"singleQuote": false,
	"printWidth": 80,
	"useTabs": true,
	"arrowParens": "always",
	"trailingComma": "all",
	"plugins": [
		"prettier-plugin-astro",
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false
			}
		}
	]
}
